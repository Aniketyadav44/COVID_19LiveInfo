<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E0E0E0"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/flag"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:src="@color/blue"
                        android:layout_margin="15dp"/>
                    <TextView
                        android:id="@+id/tvContryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country Name"
                        android:layout_gravity="center_vertical"
                        android:textSize="30dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/customfontbold"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#212121"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmed"
                        android:textColor="@color/confirmed"
                        android:fontFamily="@font/customfontbold"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/todayCasesCard"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[ + 123]"
                        android:fontFamily="@font/customfontbold"
                        android:textColor="@color/confirmed"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/casesOfCard"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123456789"
                        android:textColor="@color/confirmed"
                        android:fontFamily="@font/customfontbold"
                        android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textColor="@color/active"
                        android:fontFamily="@font/customfontbold"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/activeCasesOfCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="26dp"
                        android:fontFamily="@font/customfontbold"
                        android:text="123456789"
                        android:textColor="@color/active"
                        android:textSize="18dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deaths"
                        android:textColor="@color/death"
                        android:fontFamily="@font/customfontbold"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/todayDeathCard"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[ + 123]"
                        android:fontFamily="@font/customfontbold"
                        android:textColor="@color/death"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/deathsOfCard"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123456789"
                        android:textColor="@color/death"
                        android:fontFamily="@font/customfontbold"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>